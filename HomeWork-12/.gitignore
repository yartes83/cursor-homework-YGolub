@mixin button($bord, $br, $ff, $fs, $fw, $fS, $lh, $col, $bc, $w, $h){
  border: $bord;
  border-radius: $br;
  font-family: $ff;
  font-style: $fs;
  font-weight: $fw;
  font-size: $fS;
  line-height: $lh;
  color: $col;
  background-color: $bc;
  width: $w;
  height: $h;
}

//міксін для тексту
@mixin text($ff, $fs, $fw, $fS, $lh, $ls, $col){
  font-family: $ff;
  font-style: $fs;
  font-weight: $fw;
  font-size: $fS;
  line-height: $lh;
  color: $col;
}

%headText {
    font-family: 'Roboto';
    font-style: normal;
    font-weight: 500;
    font-size: 36px;
    line-height: 48px;
    color: #091133;
  }

